# Paperless-ngx Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# REQUIRED SETTINGS - You MUST change these values
# =============================================================================

# PostgreSQL Database Credentials
POSTGRES_DB=paperless
POSTGRES_USER=paperless
POSTGRES_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD

# Paperless Secret Key (generate with: openssl rand -hex 32)
PAPERLESS_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# =============================================================================
# PORT CONFIGURATION (Host port mappings)
# =============================================================================

# Paperless app port (nginx on host will proxy to this)
PAPERLESS_PORT=8000

# PostgreSQL port (for external tools like pgAdmin)
POSTGRES_HOST_PORT=5432

# Redis port (for external monitoring)
REDIS_HOST_PORT=6379

# Tika port (usually not needed externally)
TIKA_HOST_PORT=9998

# Gotenberg port (usually not needed externally)
GOTENBERG_HOST_PORT=3000

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Your domain name
PAPERLESS_URL=https://paperless.example.com
PAPERLESS_ALLOWED_HOSTS=paperless.example.com,localhost
PAPERLESS_CSRF_TRUSTED_ORIGINS=https://paperless.example.com
PAPERLESS_CORS_ALLOWED_HOSTS=https://paperless.example.com

# =============================================================================
# LOCALIZATION
# =============================================================================

# Timezone (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
PAPERLESS_TIME_ZONE=America/Sao_Paulo

# OCR Language(s) - use + to combine (e.g., por+eng for Portuguese and English)
# Available: eng, por, spa, deu, fra, ita, nld, etc.
PAPERLESS_OCR_LANGUAGE=por+eng

# =============================================================================
# FILE PERMISSIONS
# =============================================================================

# User/Group ID for file ownership (run 'id' to find your UID/GID)
USERMAP_UID=1000
USERMAP_GID=1000

# =============================================================================
# OPTIONAL: ADMIN USER (only used on first run)
# =============================================================================

# Uncomment and set these to auto-create an admin user on first run
# PAPERLESS_ADMIN_USER=admin
# PAPERLESS_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
# PAPERLESS_ADMIN_MAIL=admin@example.com
